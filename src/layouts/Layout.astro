---
import Spinner from "../components/Spinner.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Pramit Sharma | Infrastructure & Backend Engineer",
  description = "Infrastructure & backend engineer specialising in Kubernetes, Go, and open source. Node.js core contributor, AUR maintainer.",
} = Astro.props;

const siteUrl = "https://matricaldefunkt.me";
const ogImage = `${siteUrl}/profile.jpg`;

import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="color-scheme" content="dark" />
    <meta name="generator" content={Astro.generator} />
    <!-- Super spinner: inline so it paints before any external resource is fetched -->
    <style>
      #page-loader {
        position: fixed;
        inset: 0;
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #111110;
        color:;
        transition: opacity 0.35s ease;
      }
      #page-loader.done {
        opacity: 0;
        pointer-events: none;
      }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Non-blocking font load: preload then swap to stylesheet on load -->
    <link
      id="fonts-css"
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
      onload="this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
        rel="stylesheet"
      />
    </noscript>
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content="Pramit Sharma" />

    <!-- Twitter / X Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="Pramit Sharma" />
  </head>
  <body>
    <div id="page-loader" aria-hidden="true">
      <Spinner size="2.75rem" />
    </div>
    <main>
      <slot />
    </main>
    <footer>
      <div class="footer-inner">
        <a
          href="https://www.youtube.com/watch?v=2_Dtmpe9qaQ"
          target="_blank"
          rel="noopener noreferrer"
          class="footer-btn"
        >
          Something I believe in
        </a>
      </div>
    </footer>
    <script>
      function dismissLoader() {
        const loader = document.getElementById("page-loader");
        if (!loader) return;
        loader.classList.add("done");
        loader.addEventListener("transitionend", () => loader.remove(), {
          once: true,
        });
      }

      // Fonts CSS is loaded non-blocking (preload). Wait for it to swap to
      // 'stylesheet', which triggers font downloads, then wait for fonts.ready.
      // If it's already a stylesheet (cached), go straight to fonts.ready.
      const fontsLink = document.getElementById(
        "fonts-css",
      ) as HTMLLinkElement | null;
      if (fontsLink && fontsLink.rel !== "stylesheet") {
        fontsLink.addEventListener(
          "load",
          () => document.fonts.ready.then(dismissLoader),
          { once: true },
        );
      } else {
        document.fonts.ready.then(dismissLoader);
      }
    </script>
  </body>
</html>

<style>
  footer {
    width: 100%;
    padding: 1.25rem 2rem;
    border-top: 1px solid #2c2b27;
    background-color: #111110;
  }

  .footer-inner {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    justify-content: flex-end;
  }

  .footer-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.78rem;
    color: var(--secondary-text);
    text-decoration: none;
    border: 1px solid #2c2b27;
    border-radius: 6px;
    padding: 0.35rem 0.75rem;
    transition:
      color 0.2s,
      border-color 0.2s;
    letter-spacing: 0.01em;
  }

  .footer-btn::before {
    content: "â–¶";
    font-size: 0.65rem;
    color: #cc0000;
    opacity: 0.85;
  }

  .footer-btn:hover {
    color: #d0cdc6;
    border-color: #a8a49c;
    text-decoration: none;
  }
</style>
