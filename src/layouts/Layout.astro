---
interface Props {
  title?: string;
}

const { title = "Pramit Sharma | Infrastructure & Backend Engineer" } =
  Astro.props;

import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <footer>
      <div class="footer-inner">
        <a
          href="https://www.youtube.com/watch?v=2_Dtmpe9qaQ"
          target="_blank"
          rel="noopener noreferrer"
          class="footer-btn"
        >
          Something I believe in
        </a>
      </div>
    </footer>
  </body>
</html>

<style>
  footer {
    width: 100%;
    padding: 1.25rem 2rem;
    border-top: 1px solid #2c2b27;
    background-color: #111110;
  }

  .footer-inner {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    justify-content: flex-end;
  }

  .footer-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.78rem;
    color: #7a7672;
    text-decoration: none;
    border: 1px solid #2c2b27;
    border-radius: 6px;
    padding: 0.35rem 0.75rem;
    transition:
      color 0.2s,
      border-color 0.2s;
    letter-spacing: 0.01em;
  }

  .footer-btn::before {
    content: "â–¶";
    font-size: 0.65rem;
    color: #cc0000;
    opacity: 0.85;
  }

  .footer-btn:hover {
    color: #d0cdc6;
    border-color: #a8a49c;
    text-decoration: none;
  }
</style>
