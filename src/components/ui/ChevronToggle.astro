---
interface Props {
  ariaLabel?: string;
  class?: string;
}

const { ariaLabel = "Toggle details", class: className = "" } = Astro.props;
---

<button
  type="button"
  class:list={["chevron-toggle", className]}
  aria-label={ariaLabel}
  aria-expanded="false"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <polyline points="6 9 12 15 18 9"></polyline>
  </svg>
</button>

<style>
  .chevron-toggle {
    background: none;
    border: none;
    color: var(--secondary-text);
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .chevron-toggle > svg {
    translate: 0 0;
    transition:
      translate 0.2s ease,
      transform 0.2s ease;
  }

  .chevron-toggle:hover {
    color: var(--accent);
    background: var(--bg);
  }

  .chevron-toggle:hover > svg {
    translate: 0 4px;
  }

  .chevron-toggle.active > svg {
    transform: rotate(180deg);
  }

  .chevron-toggle.active:hover > svg {
    translate: 0 -4px;
  }
</style>
