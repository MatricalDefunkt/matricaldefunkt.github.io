---

<section>
  <h2>Experience</h2>
  <div class="experience-list">
    {
      jobs.map((job) => (
        <ListItem
          title={job.role}
          subtitle={job.company}
          date={job.date}
          badge={job.type}
          summary={job.summary}
        >
          {job.projects && (
            <div class="job-projects-grid">
              {job.projects.map((project) => (
                <Card variant="minimal">
                  <span class="project-name">{project.name}</span>
                  <span class="project-desc">{project.description}</span>
                </Card>
              ))}
            </div>
          )}
        </ListItem>
      ))
    }
  </div>
</section>

<style>
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .job-projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 0.75rem;
    margin-top: 0.25rem;
  }

  .project-name {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-color);
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .project-name::before {
    content: "";
    display: inline-block;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: var(--accent-color);
  }

  .project-desc {
    font-size: 0.85rem;
    color: var(--secondary-text);
    line-height: 1.5;
  }

